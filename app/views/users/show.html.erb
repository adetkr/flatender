<section id="profil" class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-6">
              <div class="d-flex align-items-center justify-content-between">
                    <% if @user.photo.attached? %> <%= cl_image_tag @user.photo.key, class: "d-block avatar-x-large rounded-circle img-fluid mr-3" %>
                    <% else %>
                     <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class:"d-block rounded-circle img-fluid mb-3" %>
                    <% end %>
                    <div class="p-3 ">
                        <p class="h4 text-primary mb-0"><%= @user.name %>
                          <% if current_user == @user %>
                            <%= link_to edit_user_path(current_user) , class: "btn btn-primary" do %>
                                <i class="far fa-edit"></i>
                            <% end %>
                          <% end %>
                        </p>
                        <p class="h5 mb-0"><%= @user.university %></p>
                    </div>
              </div>
            <div id="pres" class="d-block mt-4">
              <p><%= @user.presentation %></p>
            </div>
            </div>
        </div>
    </div>
</section>

