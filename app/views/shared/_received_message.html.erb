<div class="message">
  <div class="d-flex align-items-end p-3 my-2 received">
      <% if message.user.photo.attached? %>
        <%= cl_image_tag message.user.photo.key,  height: 150, width: 150, crop: :fill, class: "avatar-large rounded-circle mr-3"%>
      <% else %>
        <%= image_tag "noavatar.png", class: "avatar-large rounded-circle mr-3"%>
      <% end %>
    <div class="message-content">
      <span class="message-user"><%= message.user.name %></span>
      <p class="message-text"><%= message.content %></p>
      <span class="message-meta"><%=  message.created_at.strftime("%a %b %e at %l:%M%p") %></span>
    </div>
  </div>
</div>






