<div class="d-flex align-items-end p-3 my-2">
      <% if message.user.photo.attached? %>
        <%= cl_image_tag message.user.photo.key,  height: 150, width: 150, crop: :fill, class: "avatar-large rounded-circle mr-3"%>
      <% else %>
        <%= image_tag "noavatar.png", class: "avatar-large rounded-circle mr-3"%>
      <% end %>
  <div class="bg-gray-6 rounded-top rounded-right p-3 message-content">
    <span class="h6 font-weight-bold"><%= message.user.name %></span>
    <p><%= message.content %></p>
    <span class="small"><%=  message.created_at.strftime("%a %b %e at %l:%M%p") %></span>
  </div>
</div>
