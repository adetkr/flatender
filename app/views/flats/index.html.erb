<section id="card">
  <div class="container-fluid background-color-white">
    <div class="row">
      <div class="col-6 p-4">
        <% @flats.each do |flat| %>
          <%= link_to flat_path(flat) do %>
            <div class="card rounded border-0 mb-4 d-flex align-items-between">
              <div class="cards-flat position-relative d-flex justify-content-start">
                <%= image_tag "appartement.jpg", height: 180, width: 250, crop: :fill, class: "rounded" %>
                <div class="position-absolute">
                  <%= image_tag "profil.jpg", height: 40, width: 40 , crop: :fill, class: "avatar-cover avatar-bordered" %>
                </div>
                <div class="flex-grow-1 p-3">
                  <p class="font-16px"><%= flat.title %></p>
                  <p class="font-14px m-0"><%= flat.presentation %></p>
                  <p class="font-14px m-0"><%= flat.address %></p>
                <div class="d-flex justify-content-between flex-grow-1">
                  <p class="font-14px pt-4">Proposed by <span class="pink-color-bold"><%= flat.user.name %></span></p>  
                  <p class="font-14px pt-4"><span class="pink-color-bold"><%= flat.rent %>â‚¬</span><span class="pink-color font-14px">/mo</span></p>
                </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="col-6 p-0">
        <div id="map" 
              style="width: 100%; height: 100vh;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</section>    


    

    








